<h1><%= @article.title %></h1>

<p>
  <%= simple_format @article.text %>
</p>

<a><div id="show_comments"><p>Show Comments</p></div></a>
<div id="article_comments">
  <table>
    <% @article.comments.each do |comment| %>
    <tr>
      <td>
        <%= comment.user.email %>
      </td>
      <td>
        <%= comment.entry %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<div id="add_comment"><a>Add Comment</a></div>
<div id="add_article_comment"><%=render "/comments/form"%></div>





